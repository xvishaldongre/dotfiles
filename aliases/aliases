# Aliases

alias c='code'
alias e='exit'
alias g='grep --color -iE'
alias tf='terraform'
alias tfa='terraform apply'
alias tfd='terraform destroy'
alias tfi='terraform init'
alias tfp='terraform plan'
alias tl='task -g --list-all'
alias tm='tmux'
alias v='nvim'
alias vim='nvim'
alias n='zk -W ~/Documents/Notes new --title'
alias npm='pnpm'

gc() {
  if [ $# -eq 0 ]; then
    echo "Usage: git-clonez <repo-url> [custom-dir-name]"
    return 1
  fi

  repo_url="$1"
  dest_dir="${2:-$(basename "$repo_url" .git)}"

  git clone "$repo_url" "$dest_dir" && zoxide add "$dest_dir"
}

